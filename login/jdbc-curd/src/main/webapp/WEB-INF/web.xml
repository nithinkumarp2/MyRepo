<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  <servlet-name>savedata</servlet-name>
  <servlet-class>com.jsp.controller.SaveController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>savedata</servlet-name>
  <url-pattern>/save</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>updatedata</servlet-name>
  <servlet-class>com.jsp.controller.UpdateController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>updatedata</servlet-name>
  <url-pattern>/update</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>deletedata</servlet-name>
  <servlet-class>com.jsp.controller.DeleteController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>deletedata</servlet-name>
  <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>getalldata</servlet-name>
  <servlet-class>com.jsp.controller.GetAllController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>getalldata</servlet-name>
  <url-pattern>/getall</url-pattern>
  </servlet-mapping>
</web-app>
